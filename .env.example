# Exemple de configuration - copiez ce fichier vers .env et ajustez les valeurs
# Port pour l'API FastAPI
PORT=8000

# Chemin vers le dossier des modèles (absolu ou relatif au conteneur)
MODEL_DIR=/app/src/models

# Nom du modèle GGUF à utiliser (doit être dans MODEL_DIR)
MODEL_NAME=Llama-3.2-3B-Instruct-Q4_0.gguf

# Configuration Qdrant
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# Paramètres du générateur
MAX_TOKENS=512
TEMPERATURE=0.3
TOP_P=0.9

# Paramètres du retriever
TOP_K=5

# Mode développement
DEBUG=True